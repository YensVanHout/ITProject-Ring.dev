<script src="./js/validation.js"></script>
<%- include('header') %>
<div class="flex-grow-1 flex-shrink-0">
    <div class="container">
        <!-- HIER KOMT DE CONTENT VAN DE PAGINA -->

        <div class="row my-5">
            <h3 class="text-center">Om dit spel te spelen moet je jou gegevens verifiÃ«ren</h3>
        </div>
        <div class="row col-lg-3 mx-auto text-center fw-bold fs-3">
            <form method="GET" action="/game">
                <div class="form-group col-md-12 mb-2 pt-5">
                    <label  for="inputEmail4">Naam</label>
                    <input type="text" class="form-control " id="type" placeholder="Naam" required>
                </div>
                <div class="form-group col-md-12 mb-2">
                    <label  for="inputPassword4">Voornaam</label>
                    <input type="text" class="form-control" id="type" placeholder="Voornaam" required>
                </div>

                <div class="form-group col-md-12 mb-2">
                    <label  for="inputAddress">Boekingnummer</label>
                    <input type="text" class=" form-control" id="type" placeholder="01234567" required
                        oninput="validateBookingNumber(this)">
                </div>
                <div class="form-group col-md-12 mb-2">
                    <label  for="vertrek">Vertrek datum</label>
                    <input type="date" class="form-control" id="inputDepartureDate" required
                        oninput="validateDate(this)" onload="validateDate(this)">
                </div>
                <div class="form-group col-md-12 mb-2">
                    <label  for="inputCity">Eind datum</label>
                    <input type="date" class="form-control" id="inputEndDate" required oninput="validateDate(this)">
                </div>
                <div class="btn-group mt-3" role="group" aria-label="Basic example">
                    <a href="/" class="btn btn-secondary">back</a>
                    <!-- <a href="/gamepage.html" class="btn btn-outline-dark">send!</a> -->
                    <input type="submit" class="form-control btn btn-outline-dark">
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('footer') %>