<script src="js/notes.js" defer></script>

<%- include('header') %>

<div class="flex-grow-1 flex-shrink-0">
    <div class="container">
        <!-- HIER KOMT DE CONTENT VAN DE PAGINA -->
        <div class="col-lg-12 mt-3">
            <div class="form-group">
                <div class="grow-wrap">
                    <textarea placeholder="Type your notes here..." class="form-control" id="area" rows="3" onInput="this.parentNode.dataset.replicatedValue = this.value"></textarea>
                </div>
                <div class="row justify-content-around">
                    <div class="btn col-lg-2 col-sm-5 controls" id="save">Save</div>
                    <div class="btn col-lg-2 col-sm-5 controls" id="clear">Clear</div>
                    <div class="btn col-lg-2 col-sm-5 controls" id="download">Download Notes</div>
                    <div class="btn col-lg-2 col-sm-5 controls" id="load">Load Notes</div>
                </div>
            </div>
        </div>
    </div>
</div>