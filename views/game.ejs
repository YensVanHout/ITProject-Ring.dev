<%- include('header') %>
<script src="./js/gamepage.js" defer></script>
<div class="flex-grow-1 flex-shrink-0">
    <div class="container">
        <!-- HIER KOMT DE CONTENT VAN DE PAGINA -->
        <div class="row justify-content-center">
            <div class="btn col-lg-2 m-1 controls" id="notes">Notes</div>
            <div class="btn col-lg-2 m-1 controls" id="help">Help</div>
        </div>
        <div id="question">
            <div class="text-center fs-3" id="quote">Van wie komt de quote en uit welke film<br>“<span
                    id="quoteOutput"> <%= quote %> </span>”</div>
        </div>
        <div class="col-lg-12 row" id="timer">
            <div class="mx-auto" id="timerbackground">
                <div class="mx-auto" id="timerforeground"></div>
            </div>
            <div class="text-center fs-3" id="timertext">
                <p>2:00</p>
            </div>
        </div>
        <div id="answers">
            <div class="row d-flex justify-content-around characters">
                <div class="btn character col-sm-12 col-md-12 col-lg-3 fs-4" data-name="Frodo Baggins">
                    <%= opties2 %>
                    <!-- character -->
                </div>
                <div class="btn character col-sm-12 col-md-12 col-lg-3 fs-4" data-name="Sam Gamgee">
                    <%= opties4 %>
                    <!-- character -->
                </div>
                <div class="btn character col-sm-12 col-md-12 col-lg-3 fs-4" data-name="Gandalf">
                    <%= opties6 %>
                    <!-- character -->
                </div>
            </div>
            <hr>
            <div class="row d-flex justify-content-around mt-1 movies">
                <div class="btn movie col-sm-12 col-md-12 col-lg-3 fs-4"
                    data-movie="">
                    <%= opties1 %>
                    <!-- movie -->
                </div>
                <div class="btn movie col-sm-12 col-md-12 col-lg-3 fs-4"
                    data-movie="The Lord of the Rings: The Two Towers">
                    <%= opties3 %>
                    <!-- movie -->
                </div>
                <div class="btn movie col-sm-12 col-md-12 col-lg-3 fs-4"
                    data-movie="The Lord of the Rings: The Return of the King">
                    <%= opties5 %>
                    <!-- movie -->
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="btn controls col-sm-12 col-md12 col-lg-3 fs-4 d-flex justify-content-center"
                    id="submit">
                    Submit
                </div>
            </div>
        </div>
        <div class="text-center fs-1" id="score">
            0/0
        </div>
    </div>
</div>